/**index.wxss**/

.header {
  display: flex;
  width: 100%;
  background-color: #fff;
  height: 100rpx;
  align-items: center;
}

.header .address {
  background: #a6a6a6;
  width: 174rpx;
  height: 56rpx;
  border-radius: 28rpx;
  margin: 0 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-right: 18rpx;
  color: #fff;
  line-height: 56rpx;
}

.header .address text {
  height: 56rpx;
  line-height: 56rpx;
  color: #fff;
  font-size: 28rpx;
}

.header .address image {
  margin: 0 6rpx 0 17rpx;
}

.search-box {
  flex: 1;
  display: flex;
  background-color: #eeeeee;
  height: 56rpx;
  border-radius: 28rpx;
  margin-right: 15rpx;
  align-items: center;
}

.search-box icon {
  margin: 0 10rpx 0 18rpx;
}

.search-box input {
  font-size: 28rpx;
  color: #a6a6a6;
  flex: 1;
  height: 28rpx;
}


/*===============================================================
 =                           carousel                           =
 ==============================================================*/

.carousel {
  width: 100%;
  height: auto;
}

.carousel image {
  width: 100%;
}


/*===============================================================
 =                              nav                             =
 ==============================================================*/

.nav {
  background-color: #fff;
  display: flex;
  width: 100%;
  height: 180rpx;
  align-items: center;
}

.nav-item {
  flex: 1;
  font-size: 22rpx;
  text-align: center;
  color: #555555;
}

.nav-item image {
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 0 auto 16rpx;
}


/*===============================================================
 =                              shops                           =
 ==============================================================*/

.shops {
  margin-top: 20rpx;
  background-color: #fff;
  width: 100%;
}

.area-title {
  font-size: 32rpx;
  color: #000;
  font-family: '黑体';
  font-weight: 600;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #cccccc;
}

.area-title text {
  padding: 0 20rpx;
}

.area-title .line {
  display: inline-block;
  width: 60rpx;
  height: 2rpx;
  background-color: #999999;
  vertical-align: middle;
}

.tag-nav {
  width: 100%;
  text-align: center;
  display: flex;
  height: 80rpx;
}

.tag-nav text {
  line-height: 80rpx;
  height: 80rpx;
  flex: 1;
  font-size: 26rpx;
  color: #666666;
}

.pro-list {
  width: 100%;
}

.list-item {
  border-top: 1rpx solid #cccccc;
  width: 100%;
  padding: 20rpx 15rpx;
  box-sizing: border-box;
  display: flex;
}

.list-item .lside {
  width: 180rpx;
  padding-right: 15rpx;
}

.list-item .lside image {
  width: 180rpx;
  height: 140rpx;
}

.list-item .rside {
  flex: 1;
}

.list-item .pro-title {
  height: 42rpx;
}

.list-item .pro-title text {
  height: 42rpx;
  line-height: 42rpx;
  display: inline-block;
  vertical-align: top;
}

.list-item .pro-title text:first-child {
  font-size: 30rpx;
  color: #000;
  font-weight: 600;
  width:180rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list-item .pro-title text:nth-child(2){
  padding-left: 18rpx;
}
.list-item .pro-title text:nth-child(2),
.list-item .pro-title text:nth-child(3) {
  font-size: 24rpx;
  color: #666;
  float: right;
}

.list-item .shop-title {
  height: 42rpx;
  line-height: 42rpx;
}
.list-item .shop-title text {
  font-size: 24rpx;
  color:#666;
  display: inline-block;
}
.list-item .shop-title text:first-child{
  float: left;
  width:320rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list-item .shop-title text:last-child{
  float:right;
}

.list-item .pro-price {
  font-size: 32rpx;
  color:#fd5c5c;
  height: 42rpx;
  line-height: 42rpx;
  font-weight: 600;
}

.list-item .shop-desc {
  font-size: 24rpx;
  color:#666;
  border-top: 1rpx solid #ccc;
  margin-top: 8rpx;
  padding-top: 8rpx;
}
.list-item .shop-desc text {
  line-height: 30rpx;
}