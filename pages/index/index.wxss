/**index.wxss**/
@import '../../components/view/pro-list.wxss';

.header {
  display: flex;
  width: 100%;
  background-color: #fff;
  height: 100rpx;
  align-items: center;
}

.header .address {
  background: #a6a6a6;
  width: 174rpx;
  height: 56rpx;
  border-radius: 28rpx;
  margin: 0 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-right: 18rpx;
  color: #fff;
  line-height: 56rpx;
}

.header .address text {
  height: 56rpx;
  line-height: 56rpx;
  color: #fff;
  font-size: 28rpx;
}

.header .address image {
  margin: 0 6rpx 0 17rpx;
}

.search-box {
  flex: 1;
  display: flex;
  background-color: #eeeeee;
  height: 56rpx;
  border-radius: 28rpx;
  margin-right: 15rpx;
  align-items: center;
}

.search-box icon {
  margin: 0 10rpx 0 18rpx;
}

.search-box input {
  font-size: 28rpx;
  color: #a6a6a6;
  flex: 1;
  height: 28rpx;
}


/*===============================================================
 =                           carousel                           =
 ==============================================================*/

.carousel {
  width: 100%;
  height: auto;
}

.carousel image {
  width: 100%;
}


/*===============================================================
 =                              nav                             =
 ==============================================================*/

.nav {
  background-color: #fff;
  display: flex;
  width: 100%;
  height: 180rpx;
  align-items: center;
}

.nav-item {
  flex: 1;
  font-size: 22rpx;
  text-align: center;
  color: #555555;
}

.nav-item image {
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 0 auto 16rpx;
}


/*===============================================================
 =                              shops                           =
 ==============================================================*/

.shops {
  margin-top: 20rpx;
  width: 100%;
}

.area-title {
  font-size: 32rpx;
  color: #000;
  font-family: '黑体';
  font-weight: 600;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #cccccc;
  background-color: #fff;
}

.area-title text {
  padding: 0 20rpx;
}

.area-title .line {
  display: inline-block;
  width: 60rpx;
  height: 2rpx;
  background-color: #999999;
  vertical-align: middle;
}

.tag-nav {
  width: 100%;
  text-align: center;
  display: flex;
  height: 80rpx;
  top:0;
  z-index: 1000;
}

.tag-nav text {
  line-height: 80rpx;
  height: 80rpx;
  flex: 1;
  font-size: 26rpx;
  color: #666666;
}
