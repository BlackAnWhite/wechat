/* pages/aboutme/aboutme.wxss */
.container {
	background-color: #fff;
	padding: 100rpx 0;
	height: auto;
}
.container text.name{
	font-size: 30rpx;
	padding: 10px 0 20px;
}
.container text {
  font-size: 26rpx;
  padding:0 20rpx;
  color:#353535;
  width: 100%;
  box-sizing: border-box;
  text-align: center;
  line-height: 38rpx;
  margin-bottom: 12rpx;
}

.container .version {
  position: absolute;
  bottom: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.container image {
	width: 200rpx;
	height: 200rpx;
}

.container .content {
	text-indent: 2em;
	text-align: justify;
}

.container .adj {
	text-align: left;
	text-indent: 2em;
}

.wapper{
	height: 100%;
	position: absolute;
	background-color: #fff;
}